        = simple_form_for Contact.new, :validate => true, :url => new_contact_path, :remote => true do |f|
          = f.input :name, :placeholder => 'Enter your full name'
          = f.input :email, :placeholder => 'Enter your email address'
          = f.input :company, :placeholder => 'Enter your company name'
          = f.input :message, :as => :text, :placeholder => 'Leave us a message and we will get back to you soon!'
          .clear
          = f.input :find_us, :label => 'How did you find us?', :placeholder => 'Google, LinkedIn, Twitter, etc.'
          = f.submit 'Submit', :class => 'submit'
