  .title
    .wrap
      %h1 People
  .content#brian
    .wrap
      .col1#fixed-nav
        %ul
          %li
            %a.scroll{:href => '#brian'} Brian Cardarella
          %li
            %a.scroll{:href => '#angelo'} Angelo Simeoni
          %li
            %a.scroll{:href => '#dan'} Dan McClain
          %li
            %a.scroll{:href => '#chris'} Chris Gill
          %li
