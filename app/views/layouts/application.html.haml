!!! 5
%html
  %head
    %title Web and mobile consultancy specializing in Ruby on Rails ~ DockYard
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    /[if lt IE 9]
      %script{:src => "//html5shim.googlecode.com/svn/trunk/html5.js"}
    %script{:src => "http://use.typekit.com/ocs3hao.js"}
    %script try{Typekit.load();}catch(e){}
    %script{:src => 'http://konami-js.googlecode.com/svn/trunk/konami.js'}
    :javascript
      konami = new Konami();
      konami.code = function() {
        $('.socko').slideToggle();
      }
      konami.load();
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24185112-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    = csrf_meta_tags
    %meta{:name => 'description', :content => 'DockYard is a web and mobile software development consultancy for hire based in Boston, MA'}
    %meta{:name => 'keywords',    :content => 'web development, mobile development, startups, enterprise, ruby on rails, rails, ruby, ruby on rails training, Boston, for hire'}
    %link{:rel => 'author', :href => '/humans.txt'}

  %body
    %header
      = render :partial => 'layouts/header'

    %section#content
      = yield

    %footer
      = render :partial => 'layouts/footer'
